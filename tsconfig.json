{
  "compilerOptions": {
    "target": "ESNext",
    "lib": [
      "ESNext",
      "ESNext.Array",
      "ESNext.AsyncIterable",
      "ESNext.Intl",
      "ESNext.Symbol",
      "DOM"
    ],
    "sourceMap": false,
    "inlineSourceMap": false,
    "incremental": true,
    "esModuleInterop": true,
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "pretty": true,
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "strictNullChecks": true,
    "typeRoots": [
      "types/**/*"
    ]
  },

  "include": [
    "src/**/*",
    "types/**/*"
  ],

  "exclude": [
    "node_modules"
  ]
}
